@model DigitizingDataAdminApp.Models.AllCbtInformation
@using GridMvc.Html
@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
    ViewBag.Title = "CbtData";
}

<h4><strong>Based Trainers(CBTs)</strong></h4>
<hr />
<p>
    <a href="@Url.Action("AddCbt", "Dashboard")">
        <img  src="@Url.Content("~/Content/Images/add_cbt.png")"/>
        <strong>Add New CBT</strong>
    </a>
</p>

<div style="width: auto; min-width: 1000px; margin: 0 auto;">
    @Html.Grid(Model.AllCbtList).Columns(columns =>
                    {
                        columns.Add(c => c.Name).Titled("Name");
                        columns.Add(c => c.Region).Titled("Region");
                        columns.Add(c => c.PhoneNumber).Titled("Phone Number");
                        columns.Add(c => c.Email).Titled("Email");
                        columns.Add(c => c.Status).Titled("Status");
                        columns.Add().Titled("Details").Encoded(false).Sanitized(false).RenderValueAs(c => @<a href="@Url.Action("CbtDetails", "Dashboard", new { id = c.Id })">
                            <img  src="@Url.Content("~/Content/Images/details.png")"/></a>);
                        columns.Add().Titled("Edit").Encoded(false).Sanitized(false).RenderValueAs(c => @<a href="@Url.Action("EditCbt", "Dashboard", new { id = c.Id })">
                            <img  src="@Url.Content("~/Content/Images/edit.png")"/></a>);
                        columns.Add().Titled("Delete").Encoded(false).Sanitized(false).RenderValueAs(c => @<a href="@Url.Action("DeleteCbt", "Dashboard", new { id = c.Id })">
                            <img  src="@Url.Content("~/Content/Images/delete.png")"/></a>);
                    }).WithPaging(30).Sortable(true)
</div>
