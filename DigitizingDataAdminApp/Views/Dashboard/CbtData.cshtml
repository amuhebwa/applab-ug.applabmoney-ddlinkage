@model DigitizingDataAdminApp.Models.AllCbtInformation
@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
    ViewBag.Title = "CbtData";
}

<h4><strong>Technology Trainers(TTs)</strong></h4>
<hr />
@if(@Model.SessionUserLevel == 1) {
<p>
    <a href="@Url.Action("AddCbt", "Dashboard")"><strong>Add New Technology Trainer</strong></a>
</p>
}

<div style="width: auto; min-width: 900px; margin: 0 auto;">
    <table class="display" style="width: 100%;" id="data-table">
        <thead>
            @if(@Model.SessionUserLevel == 1) {
            <tr>
                <th>ID</th>
                <th>FullName</th>
                <th>District</th>
                <th>PhoneNumber</th>
                <th>Email</th>
                <th>Status</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            } else {
               <tr>
                <th>ID</th>
                <th>FullName</th>
                <th>District</th>
                <th>PhoneNumber</th>
                <th>Email</th>
                <th>Status</th>
                <th>Details</th>
            </tr>  
            }
        </thead>
        <tbody>
            @foreach (var item in Model.AllCbtList)
            { 
                if(@Model.SessionUserLevel == 1) {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Region</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td>@item.Status</td>
                    <td><a href="@Url.Action("CbtDetails", "Dashboard", new { id = item.Id })">
                        <img  src="@Url.Content("~/Content/Images/details.png")"/></a></td>
                    <td><a href="@Url.Action("EditCbt", "Dashboard", new { id = item.Id })">
                        <img  src="@Url.Content("~/Content/Images/edit.png")"/></a></td>
                    <td><a href="@Url.Action("DeleteCbt", "Dashboard", new { id = item.Id })">
                        <img  src="@Url.Content("~/Content/Images/delete.png")"/></a></td>
                </tr>
                } else {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Region</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td>@item.Status</td>
                    <td><a href="@Url.Action("CbtDetails", "Dashboard", new { id = item.Id })">
                        <img  src="@Url.Content("~/Content/Images/details.png")"/></a></td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>
