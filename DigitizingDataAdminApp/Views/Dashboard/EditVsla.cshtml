@model DigitizingDataAdminApp.Models.VslaInformation

@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
    ViewBag.Title = "EditVsla";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit Information for Village Saving and Lending Information</legend>
        @Html.HiddenFor(model => model.VslaId);
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.VslaCode)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.VslaCode)
                @Html.ValidationMessageFor(model => model.VslaCode)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.VslaName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.VslaName)
                @Html.ValidationMessageFor(model => model.VslaName)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.RegionId)
            </div>
            <div class="editor-field">
                @Html.DropDownList("RegionId", Model.VslaRegionsModel, new { @style = "width:250px; height:30px;" })
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.DateRegistered)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.DateRegistered, new { @class = "date", @id = "DateRegistered", @Value = Model.DateRegistered.ToString() })
                @Html.ValidationMessageFor(model => model.DateRegistered)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.DateLinked)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.DateLinked, new { @class = "date", @id = "DateLinked", @Value = Model.DateLinked.ToString() })
                @Html.ValidationMessageFor(model => model.DateLinked)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.PhysicalAddress)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.PhysicalAddress)
                @Html.ValidationMessageFor(model => model.PhysicalAddress)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.VslaPhoneMsisdn)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.VslaPhoneMsisdn)
                @Html.ValidationMessageFor(model => model.VslaPhoneMsisdn)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.GpsLocation)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.GpsLocation)
                @Html.ValidationMessageFor(model => model.GpsLocation)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.ContactPerson)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ContactPerson)
                @Html.ValidationMessageFor(model => model.ContactPerson)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.PositionInVsla)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.PositionInVsla)
                @Html.ValidationMessageFor(model => model.PositionInVsla)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.PhoneNumber)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.PhoneNumber)
                @Html.ValidationMessageFor(model => model.PhoneNumber)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.CBT)
            </div>
            <div class="editor-field">
                @Html.DropDownList("Id", Model.CbtModel, new { @style = "width:250px; height:30px;" })
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.Status)
            </div>
            <div class="editor-field">
                @Html.DropDownList("Status_Id", Model.StatusType, new { @style = "width:250px; height:30px;" })
            </div>
        </div>
        <div class="form-group">
            <p>
                <input class="btn btn-small btn-primary" type="submit" value=" Update " style="width: 100px;" />
            </p>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "VslaData")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $('.date').datepicker({ dateFormat: "dd/mm/yy" });
        });
    </script>
}
