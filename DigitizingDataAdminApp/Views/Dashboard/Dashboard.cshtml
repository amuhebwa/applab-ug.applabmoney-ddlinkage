@model DigitizingDataAdminApp.Models.DashboardSummary
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script type="text/javascript">
    $(function () {
        $("#tabs").tabs();
    });
</script>
<div id="tabs" style="width: 100%; min-width: 1000px; margin: 0 auto; font-size: small;">

    <ul>
        <li><a href="#dashboard"><strong>Dashboard | Summary</strong></a></li>
    </ul>

    <div id="dashboard">
        <table>
            <tr style="margin-bottom: 10px;">
                <td><strong>VSLAs : @Html.DisplayFor(model => model.totalVslas)<br />
                    Total Submissions : @Html.DisplayFor(model => model.totalSubmissions)<br />
                    Total Meetings Held : @Html.DisplayFor(model => model.totalMeeetings)
                </strong>
                </td>
                <td><strong>Total Members : @Html.DisplayFor(model => model.totalMembers)
                    <br />
                    MALES : @Html.DisplayFor(model => model.maleMembers)
                    <br />
                    FEMALES : @Html.DisplayFor(model => model.femaleMembers)
                </strong>
                </td>
                <td>
                    <strong>Total Savings : UGX @Html.DisplayFor(model => model.totalSavings)<br />
                        Total Loans given : UGX @Html.DisplayFor(model => model.totalLoans)<br />
                        Loan Repayments : UGX @Html.DisplayFor(model => model.totalLoanRepayment)
                    </strong>
                </td>

            </tr>
            <tr>
                <td>
                    <img src="~/Dashboard/showMembersByGender" />
                </td>
                <td>
                    <img src="~/Dashboard/showAttendance" />
                </td>
                <td>
                    <img src="~/Dashboard/showSavingsLoansAndRepayments" />
                </td>
        </table>
    </div>
</div>
