@model DigitizingDataAdminApp.Models.AllVslaInformation
@using GridMvc.Html
@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
    ViewBag.Title = "VslaData";
}

<h4>All Village Lending And Saving Associations</h4>
<hr />

<p>
    @Html.ActionLink("Add New Vsla", "AddVsla")
</p>

<div style="width:auto; margin: 0 auto;">
        @Html.Grid(Model.AllVslaList).Columns(columns => 
                    {
                        columns.Add(c => c.VslaId).Titled("Id");
                        columns.Add(c => c.VslaName).Titled("VSLA Name");
                        columns.Add(c => c.VslaCode).Titled("VSLA Code");
                        columns.Add(c => c.DateRegistered).Titled("Date Registered");
                        columns.Add().Titled("Edit").Encoded(false).Sanitized(false).RenderValueAs(c => @Html.ActionLink("Edit", "EditVsla", new { id = c.VslaId }));
                        columns.Add().Titled("Details").Encoded(false).Sanitized(false).RenderValueAs(c => @Html.ActionLink("Details", "VslaDetails", new { id = c.VslaId }));
                        columns.Add().Titled("Delete").Encoded(false).Sanitized(false).RenderValueAs(c => @Html.ActionLink("Delete", "DeleteVsla", new { id = c.VslaId }));
                    }).WithPaging(10).Sortable(true)
    </div>
