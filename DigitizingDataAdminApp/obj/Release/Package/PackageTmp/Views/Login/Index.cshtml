@model DigitizingDataAdminApp.Models.UserLogin

@{
    Layout = "~/Views/Shared/_LoginPage.cshtml";
    ViewBag.Title = "Index";
}
<div style="width: auto; margin-left: auto; margin-right: auto;">

    <img src="~/Content/Images/logo.jpeg" style="height: 50px; margin-left: 20%; display: block;" />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
       
        if (!@ViewData.ModelState.IsValid)
        { 
        <div style="font-family: inherit; color: red; font-weight: bold;">
            @Html.ValidationSummary(true)
        </div>
        
        }
        <fieldset>
            <legend></legend>
            <div class="login-form" style="margin-left: 20%; width: auto;">
                <div class="form-group">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Username)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Username)
                        @Html.ValidationMessageFor(model => model.Username, "", new { @style = "font-family:inherit; color:red;font-weight:bold;" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Password)
                    </div>
                    <div>
                        @Html.EditorFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password, "", new { @style = "font-family:inherit; color:red;font-weight:bold;" })
                    </div>
                </div>
                <div class="form-group" style="padding-left: 20px;">
                    <input class="btn btn-small btn-primary" type="submit" value=" Login " style="width: 100px;" />
                </div>
            </div>
        </fieldset>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
