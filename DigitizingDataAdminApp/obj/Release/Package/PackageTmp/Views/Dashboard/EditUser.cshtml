@model DigitizingDataAdminApp.Models.UserInformation

@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
    ViewBag.Title = "EditUser";
}


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <h4 style="text-align: center;"><strong>Edit Information for @Html.DisplayFor(model => model.Fullname)</strong></h4>
    <hr />
    <table class="table table-bordered">

        <thead>
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.DateCreated)
        </thead>

        <tr>
            <td><strong>@Html.DisplayName("Username")</strong></td>
            <td>@Html.EditorFor(model => model.Username)</td>
        </tr>

        <tr>
            <td><strong>@Html.DisplayName("Fullname")</strong></td>
            <td>@Html.EditorFor(model => model.Fullname)
                @Html.ValidationMessageFor(model => model.Fullname)</td>
        </tr>

        <tr>
            <td><strong>@Html.DisplayName("Email")</strong></td>
            <td>@Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)</td>
        </tr>

        <tr>
            <td><strong>@Html.DisplayName("Password")</strong></td>
            <td>@Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)</td>
        </tr>

        <tr>
            <td><strong>@Html.DisplayName("Access Level")</strong></td>
            <td>@Html.DropDownList("Level_Id", Model.AccessLevel, new { @style = "width:250px; height:30px;" })</td>
        </tr>

    </table>
    <p>
        <input class="btn btn-small btn-primary" type="submit" value="Update" style="width: 100px;" />
        | 
         @Html.ActionLink("Back to List", "UsersData")
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
