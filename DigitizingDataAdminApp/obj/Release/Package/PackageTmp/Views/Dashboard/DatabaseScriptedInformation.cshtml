@model DigitizingDataAdminApp.Models.AllMeeetingsSummary
@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
    ViewBag.Title = "Database Scripted Information";
}

<h4>Weeky Information on meetings</h4>
<p>
    <a href="@Url.Action("ExportWeeklySummary", "Dashboard")">
        <strong>Export to CSV</strong>
    </a>
    |
    <strong>@Html.ActionLink("Back to VSLAs", "VslaData")</strong>
</p>
<div style="width: 100%; min-width: 900px; margin: 0 auto;">
    <table class="display" style="width: 100%;" id="data-table">
        <thead>
            <tr>
                <th>VSLA Code</th>
               @* <th>Cash From Box</th>
                <th>Cash From Bank</th>
                <th>Cash Saved Box</th>
                <th>Cash Saved Bank</th>*@
                @*<th>Expenses</th>*@
                <th>Fines</th>
               @* <th>Welfare</th>*@
                <th>Date Sent</th>
                <th>Meeting Date</th>
                @*<th>Members Present</th>*@
                <th>Savings</th>
                <th>Loans</th>
                <th>Loan Repayment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.meetingsSummary)
            { 
                <tr>
                    @*<td>@item.meetingId</td>*@
                    <td>@item.VslaCode</td>
                   @* <td>@item.cashFromBox</td>*@
                    @*<td>@item.cashFromBank</td>*@
                    @*<td>@item.cashSavedBox</td>*@
                    @*<td>@item.cashSavedBank</td>*@
                   @* <td>@item.cashExpenses</td>*@
                    <td>@item.cashFines</td>
                   @* <td>@item.cashWelfare</td>*@
                    <td>@item.formattedDateSent</td>
                    <td>@item.formattedMeetingDate</td>
                    @*<td>@item.countOfMembersPresent</td>*@
                    <td>@item.sumOfSavings</td>
                    <td>@item.sumOfLoansIssued</td>
                    <td>@item.sumOfLoanRepayments</td>

                </tr>
            }
        </tbody>
    </table>
</div>
