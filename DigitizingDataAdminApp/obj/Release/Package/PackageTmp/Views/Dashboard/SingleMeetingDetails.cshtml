                    {
                        columns.Add(c => c.memberName).Titled("Name").Sanitized(false).Encoded(false).RenderValueAs(c => @Html.ActionLink(c.memberName, "MemberDetails", new { id = c.memberId, vslaId = @Model.vslaId }));
                        columns.Add(c => c.isPresent).Titled("Attended");
                        columns.Add(c => c.amountSaved).Titled("Amount Saved");
                        columns.Add(c => c.loanNumber).Titled("Loan Number");
