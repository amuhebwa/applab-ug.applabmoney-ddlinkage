                        columns.Add(c => c.remainingBalanceOnLoan).Titled("Loan Outstanding");
                    }).WithPaging(30).Sortable(true)*@
    <table class="display" style="width: 100%;" id="data-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Attended</th>
                <th>Amount Saved</th>
                <th>Loan Number</th>
                <th>Loan Amount</th>
                <th>Fines</th>
                <th>Loan Cleared</th>
                <th>Loan Outstanding</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.allMeetingData) { 
            <tr>
                <td>@item.Id</td>
                <td>@item.memberName</td>
                <td>@item.isPresent</td>
                <td>@item.amountSaved</td>
                <td>@item.loanNumber</td>
                <td>@item.principleAmount</td>
                <td>@item.finedAmount</td>
                <td>@item.loanRepaymentAmount</td>
                <td>@item.remainingBalanceOnLoan</td>
            </tr>
            }
        </tbody>
    </table>
</div>
