@model DigitizingDataAdminApp.Models.AllSingleMeetingInfo
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewBag.Title = "Meeting Details";
}

<div id="tabs" style="width: 100%; min-width: 1000px; margin: 0 auto; font-size: small;">

    <ul>
        <li><a href="#details"><strong>Meeting held on @Model.fMeetingDate</strong></a></li>
    </ul>
    <div id="details">
        <p style="text-align: right;">
            <a href="@Url.Action("ExportSingleMeetingDetailsCSV", "Dashboard", new { id = @Model.vslaId })">
                <strong>Export to CSV</strong>
            </a>
            |
    <strong>@Html.ActionLink("Back", "VslaGroupInformation")</strong>
        </p>
        <div style="width: auto; min-width: 900px; margin: 0 auto;">
            <table class="display" style="width: 100%;" id="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Attended</th>
                        <th>Amount  Saved</th>
                        <th>Loan  Number</th>
                        <th>Loan  Amount</th>
                        <th>Fines</th>
                        <th>Loan  Cleared</th>
                        <th>Loan Outstanding</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.allMeetingData)
                    { 
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.memberName</td>
                            <td>@item.isPresent</td>
                            <td>@item.fAmountSaved</td>
                            <td>@item.loanNumber</td>
                            <td>@item.fPrincipleAmount</td>
                            <td>@item.fFinedAmount</td>
                            <td>@item.fLoanRepayment</td>
                            <td>@item.fRemainingBalance</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>





