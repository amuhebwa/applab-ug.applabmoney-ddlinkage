@model DigitizingDataAdminApp.Models.AllSingleMeetingProcedures
@using GridMvc.Html
@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
    ViewBag.Title = "SingleMeetingDetails";
}
<h4><strong>Details for the Meeting held on @Model.meetingDate.Value.ToShortDateString() </strong></h4>
<p>
    <a href="@Url.Action("ExportSingleMeetingDetailsCSV", "Dashboard", new { id = @Model.vslaId })">
        <strong>Export to CSV</strong>
    </a>
    |
    <strong>@Html.ActionLink("Back to VSLAs", "VslaData")</strong>
</p>
<div style="width: auto; min-width: 900px; margin: 0 auto;">
