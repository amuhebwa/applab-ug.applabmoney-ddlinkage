@model DigitizingDataAdminApp.Models.AllVslaInformation
@using GridMvc.Html
@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
    ViewBag.Title = "VslaData";
}
<h4><strong>List Of All VSLAs</strong></h4>
<hr />

<p>
    <a href="@Url.Action("AddVsla", "Dashboard")"> <strong>Add New VSLA</strong></a>
    |
    <a href="@Url.Action("ExportVSLAsToCSV", "Dashboard")"><strong>Export to CSV</strong></a>
</p>

<div style="width: auto; min-width: 900px; margin: 0 auto;">
    <table class="display" style="width: 100%;" id="data-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>VSLA Name</th>
                <th>VSLACode</th>
                <th>DateRegistered</th>
                <th>Meetings</th>
                <th>Members</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AllVslaList)
            { 
                <tr>
                    <td>@item.VslaId </td>
                    <td>@item.VslaName </td>
                    <td>@item.VslaCode </td>
                    <td>@item.formattedDateRegistered </td>
                    <td>@Html.ActionLink("Meetings", "VslaMeetings", new { id = item.VslaId })</td>
                    <td>@Html.ActionLink("Members", "VslaMembers", new { id = item.VslaId }) </td>
                    <td><a href="@Url.Action("VslaDetails", "Dashboard", new { id = item.VslaId })">
                        <img  src="@Url.Content("~/Content/Images/details.png")"/></a></td>
                    <td><a href="@Url.Action("EditVsla", "Dashboard", new { id = item.VslaId })">
                        <img  src="@Url.Content("~/Content/Images/edit.png")"/></a></td>
                    <td><a href="@Url.Action("DeleteVsla", "Dashboard", new { id = item.VslaId })">
                        <img  src="@Url.Content("~/Content/Images/delete.png")"/></a></td>

                </tr>
            }
        </tbody>
    </table>
</div>
