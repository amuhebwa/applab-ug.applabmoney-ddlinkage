@model DigitizingDataAdminApp.Models.AllVslaMemberInformation
@using GridMvc.Html
@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
    ViewBag.Title = "VslaMembers";
}

<h4><strong>All Members of @Model.vslaName</strong></h4>
<div>
    <a href="@Url.Action("ExportMembersToCSV", "Dashboard", new { id = @Model.vslaId, fileName = @Model.vslaName })">
        <strong>Export to CSV</strong>
    </a>
    |
    <strong>@Html.ActionLink("Back to VSLAs", "VslaData")</strong>
</div>
