    <table class="display" style="width: 100%;" id="data-table">
        <thead>
            <tr>
                <th>Member No.</th>
                <th>Surname</th>
                <th>Other Names</th>
                <th>Gender</th>
                <th>Occupation</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.allVslaMembers)
            {
                <tr>
                    <td>@item.memberNumber</td>
                    <td>@item.surname</td>
                    <td>@item.otherNames</td>
                    <td>@item.gender</td>
                    <td>@item.occupation</td>
                    <td><a href="@Url.Action("MemberDetails", "Dashboard", new { id = item.memberId, vslaId = @Model.vslaId })">
                        <img  src="@Url.Content("~/Content/Images/details.png")"/></a></td>
                </tr>
            }

        </tbody>
    </table>
</div>
