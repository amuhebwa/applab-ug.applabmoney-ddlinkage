    <table class="display" style="width: 100%;" id="data-table">
        <thead>
            <tr>
                <th>UserId</th>
                <th>Username</th>
                <th>Full  Name</th>
                <th>Email</th>
                <th>User  Level</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AllUsersList)
            { 
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Username</td>
                    <td>@item.Fullname</td>
                    <td>@item.Email</td>
                    <td>@item.UserLevel</td>
                    <td><a href="@Url.Action("UserDetails", "Dashboard", new { id = item.Id })">
