<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @*    @Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    @Styles.Render("~/Content/themes/base/css", "/Content/css")
    @RenderSection("scripts", required: false)
</head>
<body>

    <div class="container wrap sidebar-right">
        <div class="container" style="margin-top: 100px; margin-bottom: 200px;">
            <div class="vertical-center-row horizontal-center-row">
                <div class="col-sm-12 col-md-10 col-md-offset-1">
                    <div class="center col-md-8" style="float: none; margin: 0 auto;">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer col-md-12" style="padding: 20px; margin-top: 10px; height: 50px; background-color: #fff;">

            <p style="text-align: center;">&copy; @DateTime.Now.Year - LedgerLink Administrator Portal</p>

        </div>

    </div>
    @Scripts.Render("~/bundles/jquery")
</body>
</html>
